#!/usr/bin/env node

var M4 = require('..');
var nopt = require('nopt');
var path = require('path');
var fs = require('fs');
var npmlog = require('npmlog');

var knownOpts = {
    'extensions': Boolean,
    'output': path
};

var opts = nopt(knownOpts);
var files = opts.argv.remain;
var output = process.stdout;

if (typeof opts.output !== 'undefined') {
    output = fs.createWriteStream(opts.output, {encoding: 'utf8'});
}

process.stdin.setEncoding('utf8');

if (files.length === 0)
    files.push('-');

processFiles(files, output, end);

function end() {
    if (output !== process.stdout) {
        output.end();
    }
}

function processFiles(files, output, cb) {
    if (files.length === 0) {
        return cb();
    }
    var file = files.shift();
    var input = null;
    if (file === '-') input = process.stdin;
    else input = fs.createReadStream(file, {encoding: 'utf8'});
    processInput(input, output, function (err) {
        if (err) return cb(err);
        processFiles(files, output, cb);
    });
}

function processInput(input, output, cb) {
    var m4 = new M4();
    input.pipe(m4).pipe(output, {end: false});
    m4.on('end', function (err) {
        cb(err);
    });
}
